# NeuroCanvas Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/neurocanvas
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=neurocanvas
DATABASE_USER=your_db_username
DATABASE_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Security Keys
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# Application Settings
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5000
WORKERS=4

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp,wav,mp3,ogg,m4a,mp4,webm,avi,mov

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# AI Model Configuration
EMOTION_MODEL_NAME=cardiffnlp/twitter-roberta-base-emotion
SENTIMENT_MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
AUDIO_MODEL_NAME=facebook/wav2vec2-base-960h

# Art Generation Settings
ART_GENERATION_STEPS=50
ART_GUIDANCE_SCALE=7.5
ART_IMAGE_SIZE=512
ART_BATCH_SIZE=1
ART_NUM_INFERENCE_STEPS=20

# Emotion Analysis Settings
EMOTION_CONFIDENCE_THRESHOLD=0.5
EMOTION_SMOOTHING_FACTOR=0.3
EMOTION_HISTORY_LENGTH=10

# Memory System Settings
MEMORY_RETENTION_DAYS=30
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_MAX_ENTRIES=1000
MEMORY_CLEANUP_INTERVAL=24

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_MAX_SIZE=1048576

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=neurocanvas.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
MAX_CONCURRENT_REQUESTS=100

# Neuromorphic Art Parameters
NEURAL_NETWORK_LAYERS=5
NEURAL_NETWORK_NODES=100
NEURAL_CONNECTION_DENSITY=0.3
NEURAL_ACTIVATION_THRESHOLD=0.5
NEURAL_DECAY_RATE=0.1

# Narrative Generation Settings
NARRATIVE_MAX_LENGTH=500
NARRATIVE_TEMPERATURE=0.7
NARRATIVE_TOP_P=0.9
NARRATIVE_FREQUENCY_PENALTY=0.5
NARRATIVE_PRESENCE_PENALTY=0.3

# Development Settings
RELOAD_ON_CHANGE=True
PROFILING_ENABLED=False
METRICS_ENABLED=True

# Production Settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=False
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# External Services (optional)
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_API_KEY=your_analytics_key_here
# MONITORING_ENDPOINT=your_monitoring_endpoint_here

# Feature Flags
ENABLE_VOICE_ANALYSIS=True
ENABLE_IMAGE_ANALYSIS=True
ENABLE_REAL_TIME_GENERATION=True
ENABLE_MEMORY_SYSTEM=True
ENABLE_NARRATIVE_GENERATION=True
ENABLE_USER_ANALYTICS=True
